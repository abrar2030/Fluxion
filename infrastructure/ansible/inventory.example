---
# Ansible Inventory Example
# Copy to 'inventory' and update with your actual hosts
# DO NOT commit 'inventory' file with real IPs to version control

all:
  children:
    webservers:
      hosts:
        web1:
          ansible_host: 192.168.1.10  # Replace with actual IP
        web2:
          ansible_host: 192.168.1.11  # Replace with actual IP
    databases:
      hosts:
        db1:
          ansible_host: 192.168.1.20  # Replace with actual IP
  vars:
    ansible_user: ec2-user
    ansible_ssh_private_key_file: ~/.ssh/fluxion-key.pem  # Replace with your key path
    ansible_ssh_common_args: '-o ServerAliveInterval=60 -o ServerAliveCountMax=3'
    ansible_python_interpreter: /usr/bin/python3
